<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>  
  <!-- logging-->
  
  
  <!-- refresh after session timeout  -->
  
    
  <!-- // -->
  
  <!-- Standard Action Servlet Configuration (with debugging) -->
	
	
	<servlet>
        <servlet-name>step</servlet-name>
        <servlet-class>org.tch.forecast.StepServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>listCodes</servlet-name>
        <servlet-class>org.tch.forecast.ListCodesServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>caret</servlet-name>
        <servlet-class>org.tch.forecast.CaretServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>forecast</servlet-name>
        <servlet-class>org.tch.forecast.ForecastServlet</servlet-class>
    </servlet> 
    <servlet-mapping>
        <servlet-name>forecast</servlet-name>
        <url-pattern>forecast</url-pattern>
    </servlet-mapping>	 
    <servlet-mapping>
        <servlet-name>step</servlet-name>
        <url-pattern>fv/step</url-pattern>
    </servlet-mapping>	 
    <servlet-mapping>
        <servlet-name>listCodes</servlet-name>
        <url-pattern>listCodes</url-pattern>
    </servlet-mapping>	 
    <servlet-mapping>
        <servlet-name>caret</servlet-name>
        <url-pattern>fv/caret</url-pattern>
    </servlet-mapping>	 


  <session-config>
      <session-timeout>20</session-timeout>    
    </session-config>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>  

  <!-- Struts Tag Library Descriptors -->
  


 <!-- Default login configuration uses form-based authentication -->
 
</web-app>
